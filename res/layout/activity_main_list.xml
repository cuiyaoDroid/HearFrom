<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleLayout"
        layout="@layout/title_layout" />

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/titleLayout"
        android:clickable="true" />
<TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bmapView"
        android:background="@color/title_color" />
    <com.tingshuo.tool.view.pulltorefresh.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_post_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/divider"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:fillViewport="true"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never"
        android:scrollbarStyle="outsideOverlay"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrDrawable="@drawable/refresh_arrow_2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        ptr:ptrMode="both"
        ptr:itemCount="2"
        ptr:ptrShowIndicator="false" >
    </com.tingshuo.tool.view.pulltorefresh.PullToRefreshListView>
	<LinearLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="vertical"
	    android:layout_alignTop="@+id/main_post_list"
	    android:layout_alignBottom="@+id/main_post_list">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/maintransdarkblack" />
 	<TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/maintransdarkblack" />
    </LinearLayout>

</RelativeLayout>