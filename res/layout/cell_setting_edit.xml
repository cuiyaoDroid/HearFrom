<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_height"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/setting_padding"
    android:paddingRight="@dimen/setting_padding"
    android:weightSum="3" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="TextView" />

    <EditText
        android:id="@+id/editer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/normal_txt_size"
        android:ems="10" >
    </EditText>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/bg_list_item" />

</LinearLayout>